<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<!--mapper映射-->
<mapper namespace="com.gameloft9.demo.dataaccess.dao.photovote.SysHistoryMapper">
    <!--结果集映射-->
    <resultMap id="BaseResultMap" type="com.gameloft9.demo.dataaccess.model.photovote.HistoryTest">
        <id column="hid" property="hid" jdbcType="INTEGER"/>
        <result column="vid" property="vid" jdbcType="INTEGER"/>
        <result column="issueTime" property="issueTime" jdbcType="TIMESTAMP"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
    </resultMap>

    <select id="getAll" resultMap="BaseResultMap">
SELECT
hi.hid  hid,
hi.vid title,
hi.issueTime issueTime,
res.resName status,
vo.title vid
FROM
tp_photo_history AS hi,
tp_resourcelist AS res,
tp_photo_vote AS vo
WHERE vo.vid=hi.vid
AND hi.status=res.id limit #{start,jdbcType=DECIMAL},#{end,jdbcType=DECIMAL}
    </select>
    <select id="countGetAll" resultType="Integer">
        select count(1) from tp_photo_history
        where 1=1
    </select>
    <delete id="delete" parameterType="INTEGER">
        delete from tp_photo_history where hid=#{hid}
    </delete>
    <select id="findById" parameterType="INTEGER" resultType="com.gameloft9.demo.dataaccess.model.photovote.HistoryTest">
        select status from tp_photo_history where hid=#{0}
    </select>
    <update id="editStatus" parameterType="INTEGER">
        update tp_photo_history set  status=36 where hid=#{0}
    </update>
    <insert id="addHistory" parameterType="com.gameloft9.demo.dataaccess.model.photovote.HistoryTest"  useGeneratedKeys="true" keyProperty="hid">
         insert into tp_photo_history (vid,issueTime,status) values (#{vid,jdbcType=INTEGER},#{issueTime,jdbcType=TIMESTAMP},#{status,jdbcType=INTEGER})
    </insert>
    <select id="findVid" parameterType="INTEGER" resultType="INTEGER">
        select  vid from tp_photo_history where hid=#{0}
    </select>
</mapper>