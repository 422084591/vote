<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.gameloft9.demo.dataaccess.dao.system.TpGradeUserMapper">

    <resultMap id="BaseResultMap" type="com.gameloft9.demo.dataaccess.model.system.TpGradeUser">
        <id column="username" property="username" jdbcType="VARCHAR"/>
        <result column="uid" property="uid" jdbcType="INTEGER"/>
        <result column="tel" property="tel" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
    </resultMap>

    <resultMap id="UserTestResultMap" type="com.gameloft9.demo.service.beans.system.TpGradeUserTest">
        <id column="username" property="username" jdbcType="VARCHAR"/>
        <result column="uid" property="uid" jdbcType="INTEGER"/>
        <result column="tel" property="tel" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="pst" property="position" jdbcType="VARCHAR"></result>
    </resultMap>

    <resultMap id="PhotoUserResultMap" type="com.gameloft9.demo.dataaccess.model.system.TpGradePhotoUser">
        <id column="uid" property="uid" jdbcType="INTEGER"/>
        <result column="uname" property="uname" jdbcType="VARCHAR"/>
        <result column="sex" property="sex" jdbcType="INTEGER"/>
        <result column="departmentId" property="departmentId" jdbcType="INTEGER"/>
        <result column="classOfPosition" property="classOfPosition" jdbcType="INTEGER"/>
        <result column="position" property="position" jdbcType="INTEGER"/>
        <result column="gradeOfJudge" property="gradeOfJudge" jdbcType="INTEGER"/>
        <result column="category" property="category" jdbcType="INTEGER"/>
        <result column="pst" property="position" jdbcType="VARCHAR"></result>
    </resultMap>

    <resultMap id="ResResultMap" type="com.gameloft9.demo.dataaccess.model.system.TpResourcesList">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="resKind" property="resKind" jdbcType="VARCHAR"/>
        <result column="resNum" property="resNum" jdbcType="INTEGER"/>
        <result column="resName" property="resName" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">

        username, uid, tel, password

    </sql>

    <select id="findAll" resultMap="UserTestResultMap">
        SELECT
        guser.username,
        puser.uname uid,
        guser.tel,
        res.resName pst
        FROM tp_grade_user as guser, tp_photo_user as puser, tp_resourcelist as res
        WHERE 1=1
        <if test="username !=null and username != ''">
            and username = #{username, jdbcType=VARCHAR}
        </if>
        and guser.uid = puser.uid and puser.position = res.id
        limit #{start,jdbcType=DECIMAL},#{end,jdbcType=DECIMAL}
    </select>

    <insert id="add" parameterType="com.gameloft9.demo.dataaccess.model.system.TpGradeUser">
        insert into tp_grade_user (username, uid, tel, password)
        values (#{username, jdbcType=VARCHAR}, #{uid, jdbcType=INTEGER}, #{tel, jdbcType=VARCHAR},
        #{password, jdbcType=VARCHAR});
    </insert>

    <delete id="del" parameterType="java.lang.String">
        delete from tp_grade_user
        where username = #{username, jdbcType=VARCHAR}
    </delete>

    <select id="findByUsername" parameterType="java.lang.String" resultMap="UserTestResultMap">
        select
        guser.username,
        guser.uid,
        guser.tel,
        puser.position pst,
        guser.password
        from tp_grade_user as guser, tp_photo_user as puser, tp_resourcelist as res
        where
        guser.uid = puser.uid and puser.position = res.id
        and username = #{username, jdbcType=VARCHAR}
    </select>

    <update id="update" parameterType="com.gameloft9.demo.dataaccess.model.system.TpGradeUser">
        update tp_grade_user
        <set>
            <if test="uid !=null and uid != ''">
                uid = #{uid},
            </if>
            <if test="tel !=null and tel != ''">
                tel = #{tel},
            </if>
            <if test="password !=null and password != ''">
                password = #{password},
            </if>
        </set>
        where username = #{username}
    </update>

    <update id="updpos" parameterType="com.gameloft9.demo.service.beans.system.TpGradeUserTest2">
        update tp_photo_user
        <set>
            <if test="position !=null and position != ''">
               tp_photo_user.position = #{position}
            </if>
        </set>
        where uid = #{uid}
    </update>

    <select id="countGetAll" resultType="Integer" parameterType="map">
        select count(1)
        from tp_grade_user
        where 1=1
        <if test="username !=null and username != ''">
            and username = #{username, jdbcType=VARCHAR}
        </if>
    </select>

    <select id="getUid" resultMap="PhotoUserResultMap">
        select
        uid, uname
        from tp_photo_user
    </select>

    <select id="getPosition" resultMap="ResResultMap">
        select
        id,
        resName
        from tp_resourcelist res, tp_photo_user puser
        where res.id between 7 and 20
    </select>

</mapper>
