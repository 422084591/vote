<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.gameloft9.demo.dataaccess.dao.system.TpGradeAdmMapper">

    <resultMap id="BaseResultMap" type="com.gameloft9.demo.dataaccess.model.system.TpGradeAdm">
        <id column="adm_Id" property="admId" jdbcType="INTEGER"/>
        <result column="templet_Id" property="templet_Id" jdbcType="INTEGER"/>
        <result column="a_time" property="a_time" jdbcType="TIMESTAMP"/>
        <result column="templet_title" property="templet_title" jdbcType="VARCHAR"/>
        <result column="res_Id" property="res_Id" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">

        adm_Id, templet_Id, a_time, templet_title, res_Id

    </sql>

    <select id="findByAId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM tp_grade_adm
        WHERE 1=1
        <if test="admId !=null and admId != ''">
            and adm_Id = #{admId, jdbcType=INTEGER}
        </if>
    </select>

    <select id="getAll" resultMap="BaseResultMap" parameterType="map">
        select
        adm.adm_Id,
        adm.templet_title ,
        adm.a_time ,
        res.resName res_Id
        from tp_resourcelist as res, tp_grade_templet as tem, tp_grade_adm as adm
        WHERE 1=1
        <if test="admId !=null and admId != ''">
            and adm_Id = #{admId, jdbcType=INTEGER}
        </if>
        and res.id = adm.res_Id and tem.templet_Id = adm.templet_Id
        order by res_Id desc
        limit #{start,jdbcType=DECIMAL},#{end,jdbcType=DECIMAL}
    </select>

    <select id="countGetAll" resultType="Integer" parameterType="map">
        select count(1)
        from tp_grade_adm
        where 1=1
        <if test="admId !=null and admId != ''">
            and adm_Id = #{admId, jdbcType=INTEGER}
        </if>
    </select>

    <insert id="addmuban" parameterType="com.gameloft9.demo.dataaccess.model.system.TpGradeAdm"
            useGeneratedKeys="true" keyProperty="adm_Id">
        insert into tp_grade_adm (templet_Id, a_time, templet_title, res_Id)
        values (#{templet_Id}, #{a_time}, #{templet_title}, #{res_Id})
    </insert>

    <delete id="delete" parameterType="java.lang.Integer">
        delete from tp_grade_adm
        where adm_Id = #{admId}
    </delete>

    <delete id="deletebytid" parameterType="java.lang.Integer">
        delete from tp_grade_adm
        where templet_Id = #{templet_Id}
    </delete>

    <update id="zhiding" parameterType="com.gameloft9.demo.dataaccess.model.system.TpGradeAdm">
        update tp_grade_adm
        <set>
            <if test="templet_Id !=null and templet_Id != ''">
                templet_Id = #{templet_Id,jdbcType=INTEGER},
            </if>
            <if test="a_time !=null and a_time != ''">
                a_time = #{a_time,jdbcType=TIMESTAMP},
            </if>
            <if test="templet_title !=null and templet_title != ''">
                templet_title = #{templet_title,jdbcType=VARCHAR},
            </if>
            <if test="res_Id !=null and res_Id != ''">
                res_Id = #{res_Id,jdbcType=INTEGER},
            </if>
        </set>
        where adm_Id = #{admId,jdbcType=INTEGER}
    </update>

    <select id="getTemId" parameterType="java.lang.Integer" resultType="Integer">
        select templet_Id
        from tp_grade_adm
        where
        adm_Id = #{admId}
    </select>

    <select id="getadmId" parameterType="java.lang.Integer" resultType="Integer">
        select
        adm_Id
        from
        tp_grade_adm
        where
        templet_Id = #{templet_Id}
    </select>

</mapper>