<mapper namespace="com.gameloft9.demo.dataaccess.dao.photovote.ModelHistoryMapper">
    <!--结果集映射-->
    <resultMap id="BaseResultMap" type="com.gameloft9.demo.dataaccess.model.photovote.ModelManagerTest">
        <id column="mid" property="mid" jdbcType="INTEGER"/>
        <result column="vid" property="vid" jdbcType="INTEGER"/>
        <result column="modelTitle" property="modelTitle" jdbcType="VARCHAR"/>
        <result column="startTime" property="startTime" jdbcType="TIMESTAMP"/>

    </resultMap>

    <select id="findAll" resultMap="BaseResultMap">
SELECT
mid,
vid,
modelTitle,
startTime,
isTop
FROM
tp_photo_modelmanager order  by isTop ASC limit #{start,jdbcType=DECIMAL},#{end,jdbcType=DECIMAL}
    </select>
    <select id="countGetAll" resultType="Integer">
        select count(1) from tp_photo_modelmanager
        where 1=1
    </select>
    <delete id="delete" parameterType="INTEGER">
        delete from tp_photo_modelmanager where mid=#{mid}
    </delete>
