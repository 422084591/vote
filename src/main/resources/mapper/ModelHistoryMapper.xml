    <select id="getById" parameterType="INTEGER" resultType="com.gameloft9.demo.dataaccess.model.photovote.ModelManagerTest">
        SELECT tp_photo_vote.title,tp_photo_vote.votingInstruction,tp_photo_vote.votedNum,tp_photo_modelmanager.modelTitle
FROM tp_photo_vote,tp_photo_modelmanager WHERE tp_photo_vote.vid=tp_photo_modelmanager.mid
    </select>
    <insert id="addModel" parameterType="com.gameloft9.demo.dataaccess.model.photovote.ModelManagerTest">
          insert into tp_photo_modelmanager (vid,modelTitle,startTime,isTop) values (#{vid,jdbcType=INTEGER},#{modelTitle,jdbcType=VARCHAR},
        #{startTime,jdbcType=TIMESTAMP},#{isTop,jdbcType=INTEGER})
    </insert>
    <select id="findVid" parameterType="INTEGER" resultType="INTEGER">
        select  vid from tp_photo_modelmanager where mid=#{0}
    </select>
    <update id="editTop1" parameterType="INTEGER">
        update tp_photo_modelmanager set isTop=53 where mid=#{0}
    </update>
    <update id="editTop2" parameterType="INTEGER">
